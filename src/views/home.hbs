<div class="container">
    <div class="row mt-2">
        {{#each products}}
        <div class="col-lg-4 col-md-6 col-sm-6 mt-3">
            <div class="card" style="width: 18rem;">
                <img src="{{this.imageSrc}}" class="card-img-top" width="100px" height="200px">
                <div class="card-body">
                    <h5 class="">{{this.name}}</h5>
                    <div class="d-flex justify-content-between">
                        <p>{{this.price}}</p>
                        <a data-id="{{this._id}}" class="btn btn-primary addToCart">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>